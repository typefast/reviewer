<div class="row ">
  <div class="col-md-8 ">
    
    <div class="books">
      <h3 class="title"><%= @book.title %></h3>
      <p class="author"><%= @book.author %></p>
    </div>
    
    <div class="reviews"> 
      <h3 class="reviews-title">Reviews</h3>
      
      <%= link_to "New review", new_book_review_path(@book), class: 'btn btn-success new-review-btn' %>
      
      <% @book.reviews.each do |r| %>
        <div class="comments">
          <p><%= r.name %></p>
          <p><%= r.comment %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>